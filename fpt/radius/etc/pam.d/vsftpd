# Standard behaviour for ftpd(8).
auth    required        pam_listfile.so item=user sense=deny file=/etc/ftpusers onerr=succeed

# Note: vsftpd handles anonymous logins on its own. Do not enable pam_ftp.so.

# Standard pam includes
#@include common-account
#@include common-session
#@include common-auth
#auth   required        pam_shells.so

#CONFIGURACIO PER AUTENTICAR AMB RADIUS
auth required /lib/x86_64-linux-gnu/security/pam_radius_auth.so
account required /lib/x86_64-linux-gnu/security/pam_radius_auth.so
password required /lib/x86_64-linux-gnu/security/pam_radius_auth.so
session required /lib/x86_64-linux-gnu/security/pam_radius_auth.so
